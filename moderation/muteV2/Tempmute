	{{ $v :=  (index $temp 0)}}
	{{ $d := (index $temp 1)}}
	{{$silent := execAdmin "mute" $v "0" "You have been temporarily muted"}}
	{{$duration := toDuration $d}}
	{{scheduleUniqueCC (toInt $uCCID) nil $duration.Seconds 69 $v}}
	{{deleteTrigger 1}}
{{end}}
